        <Button x:Name="_continue" Content="Continue" HorizontalAlignment="Left" Margin="468,528,0,0" VerticalAlignment="Top" Background="#FFD11212" BorderBrush="#FF040404" Foreground="Black" Click="_continue_Click"/>
        <TextBlock x:Name="Dateprompt" HorizontalAlignment="Left" Margin="819,414,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="59" Width="530" Foreground="#FFE61717" FontSize="24">
        	<FlyoutBase.AttachedFlyout>
        		<MenuFlyout/>
        	</FlyoutBase.AttachedFlyout>
        </TextBlock>

    </Grid>
</Page>
