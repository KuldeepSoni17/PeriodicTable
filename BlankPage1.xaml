                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF8000FF" Offset="0.098"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <Image HorizontalAlignment="Left" Height="68" Margin="34,41,0,0" VerticalAlignment="Top" Width="62" Source="Assets/New Bitmap Image.bmp"/>
        <TextBlock HorizontalAlignment="Left" Margin="198,219,0,0" TextWrapping="Wrap" Text="Enter your name" VerticalAlignment="Top" FontSize="30" Foreground="#FFEC1F0A" />
        <TextBox x:Name="N1" HorizontalAlignment="Left" Margin="468,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="397" Background="#FFD33C25" BorderBrush="#FF2931E0" />
        <TextBlock HorizontalAlignment="Left" Margin="198,329,0,0" TextWrapping="Wrap" Text="Gender" VerticalAlignment="Top" FontSize="30" Foreground="#FFEC1F0A" Height="52" Width="228"/>
        <RadioButton Content="Male&#x9;" HorizontalAlignment="Left" Margin="465,336,0,0" VerticalAlignment="Top" BorderBrush="#FFCD2A2A" Foreground="red" />
        <RadioButton Content="Female" HorizontalAlignment="Left" Margin="576,336,0,0" VerticalAlignment="Top" BorderBrush="#FFCD2A2A" Foreground="red"/>
        <DatePicker x:Name="bdate" HorizontalAlignment="Left" Margin="468,421,0,0" VerticalAlignment="Top" Width="397" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="198,421,0,0" TextWrapping="Wrap" Text="Birthdate" VerticalAlignment="Top" Height="48" Width="218" FontSize="30" Foreground="#FFEC1F0A"/>
